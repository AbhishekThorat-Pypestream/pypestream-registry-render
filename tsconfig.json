{
  "include": ["src"],
  // Override default file consideration
  "files": ["../../types/env.d.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": false,
    "noEmit": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  }
}
